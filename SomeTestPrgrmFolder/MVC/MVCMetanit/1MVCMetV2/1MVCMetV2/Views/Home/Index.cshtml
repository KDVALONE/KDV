<!--  Layout = null; мы указываем, что мастер-страница не будет применяться к этому представлению. -->>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Книжный магазин</title>
</head>
<body>
    <div>
        <h3>Распродажа книг</h3>
        <table>
            <tr>
                <td><p>Название книги</p></td>
                <td><p>Автор</p></td>
                <td><p>Цена</p></td>
                <td></td>
            </tr>

            <!--sad конструкция foreach применяет синтаксис Razor. после символа @@ мы можем использовать выражения кода на языке C#/VB.NET  -->
            <!-- То есть тут мы создаем цикл. В нем мы пробегаемся по всем элементам в объекте ViewBag.Books, который был ранее создан в методе контроллера.
                И затем получаем значение свойства каждого элемента с помощью синтаксиса Razor: @@b.Name и помещаем его в ячейку таблицы -->
            @foreach (var b in ViewBag.Books)
            {
                <tr>
                    <td><p>@b.Name</p></td>
                    <td><p>@b.Author</p></td>
                    <td><p>@b.Price</p></td>
                    <td><p><a href="/Home/Buy/@b.Id">Купить</a></p></td>
                </tr>
            }
        </table>
        </div>
    </body>
    </html>
